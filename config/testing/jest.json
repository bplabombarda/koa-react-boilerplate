{
  "bail": true,
  "collectCoverage": true,
  "coverageDirectory": "<rootDir>/logs/jest",
  "coverageReporters": [
    "html",
    "json",
    "lcov",
    "text"
  ],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "moduleFileExtensions": [
    "js",
    "jsx"
  ],
  "moduleNameMapper": {
    "\\.(css|styl)$": "<rootDir>/src/styles/__mocks__/styleMock.js"
  },
  "modulePathIgnorePatterns": ["public"],
  "rootDir": "../../",
  "setupFiles": [
    "<rootDir>/config/testing/setUp.js"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/node_modules/jest-enzyme/lib/index.js"
  ],
  "snapshotSerializers": [
    "enzyme-to-json/serializer"
  ],
  "verbose": true
}
