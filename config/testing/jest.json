{
  "bail": true,
  "collectCoverage": true,
  "coverageDirectory": "<rootDir>/logs/jest",
  "coverageReporters": [
    "html",
    "json",
    "lcov",
    "text"
  ],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "moduleFileExtensions": [
    "js",
    "jsx"
  ],
  "moduleNameMapper": {
    "\\.(css|styl)$": "<rootDir>/config/testing/__mocks__/stylesMock.js",
    "axios": "<rootDir>/config/testing/__mocks__/axiosMock.js"
  },
  "modulePathIgnorePatterns": ["public"],
  "rootDir": "../../",
  "setupFiles": [
    "<rootDir>/config/testing/setUp.js"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/node_modules/react-testing-library/cleanup-after-each"
  ],
  "verbose": true
}
